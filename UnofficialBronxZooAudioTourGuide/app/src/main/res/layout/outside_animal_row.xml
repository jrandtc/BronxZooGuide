<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rowOutsideAnimalImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_foreground"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/rowOutsideAnimalNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Zoo Name"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rowOutsideAnimalImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.060000002"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/rowOutsideAnimalBiNomTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Binomial Nomenclature"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rowOutsideAnimalImg"
                app:layout_constraintTop_toBottomOf="@+id/rowOutsideAnimalNameTxt"
                app:layout_constraintVertical_bias="0.060000002" />

            <TextView
                android:id="@+id/rowOutsideDistanceTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="My Distance from Phone"
                android:textSize="14sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rowOutsideAnimalImg"
                app:layout_constraintTop_toBottomOf="@+id/rowOutsideAnimalNameTxt"
                app:layout_constraintVertical_bias="0.76" />

            <ImageView
                android:id="@+id/rowOutsideArrowImg"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:rotationY="-180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.956"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/homeAsUpIndicator" />

            <ImageView
                android:id="@+id/rowOutsideArrowImg2"
                android:layout_width="47dp"
                android:layout_height="54dp"
                android:rotationY="-180"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.788"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="?attr/homeAsUpIndicator" />

            <ImageView
                android:id="@+id/imgCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/rowOutsideAnimalNameTxt"
                app:layout_constraintEnd_toEndOf="@+id/rowOutsideAnimalBiNomTxt"
                app:layout_constraintHorizontal_bias="0.71"
                app:layout_constraintStart_toStartOf="@+id/rowOutsideAnimalNameTxt"
                app:layout_constraintTop_toTopOf="@+id/rowOutsideAnimalNameTxt"
                app:srcCompat="@android:drawable/checkbox_on_background" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>